<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_turn_by_turn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.udacity.turnbyturn.TurnByTurn"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="217dp"
        android:layout_height="217dp"
        android:src="@drawable/turnbyturn"
        tools:layout_editor_absoluteX="83dp"
        tools:layout_editor_absoluteY="57dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        app:layout_constraintLeft_toLeftOf="@+id/content_turn_by_turn"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toTopOf="@+id/content_turn_by_turn"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/content_turn_by_turn"
        tools:layout_constraintRight_creator="0"
        app:layout_constraintBottom_toBottomOf="@+id/content_turn_by_turn"
        android:layout_marginBottom="180dp"
        tools:layout_constraintBottom_creator="0" />

    <TextView
        android:id="@+id/invite_info"
        android:layout_width="192dp"
        android:layout_height="45dp"
        android:text="@string/app_name"
        android:textSize="36sp"
        android:textStyle="normal"
        android:textColor="@color/colorAccent"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="374dp"
        app:layout_constraintLeft_toLeftOf="@+id/content_turn_by_turn"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintTop_toTopOf="@+id/content_turn_by_turn"
        android:layout_marginTop="240dp"
        tools:layout_constraintTop_creator="0"
        app:layout_constraintRight_toRightOf="@+id/content_turn_by_turn"
        tools:layout_constraintRight_creator="0"
        app:layout_constraintBottom_toBottomOf="@+id/content_turn_by_turn"
        tools:layout_constraintBottom_creator="0" />

    <com.google.android.gms.common.SignInButton
        android:contentDescription="@string/sign_in"
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        tools:layout_editor_absoluteX="137dp"
        tools:layout_editor_absoluteY="463dp"
        app:layout_constraintLeft_toLeftOf="@+id/content_turn_by_turn"
        tools:layout_constraintLeft_creator="0"
        app:layout_constraintRight_toRightOf="@+id/content_turn_by_turn"
        tools:layout_constraintRight_creator="0"
        app:layout_constraintBottom_toBottomOf="@+id/content_turn_by_turn"
        tools:layout_constraintBottom_creator="0" />

</android.support.constraint.ConstraintLayout>
